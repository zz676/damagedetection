<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aig.science.dd3d.DD3DGLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/carpart_cancel_submit_photos_btn"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:text="@string/btn_finish_photo_take_txt"
            android:layout_width="160dp"
            style="@style/generalButtonStyle"
            />
        <Button
            android:id="@+id/carpart_submit_photos_btn"
            android:layout_marginTop="0dp"
            android:layout_width="160dp"
            android:layout_marginLeft="0dp"
            android:text="@string/btn_submit_photos_txt"
            style="@style/generalButtonStyle"
            />
    </LinearLayout>
</FrameLayout>
